pipeline {
  agent any
  environment {
   ANSIBLE_PRIVATE_KEY=credentials('mariadb-private-key') 
  }
  stages {
    stage('Hello') {
      steps {
        sh '''
          ansible --version
          ansible-playbook --version
          ansible-galaxy --version
        '''
      }
    }
    stage('nginx') {
      steps {
        sh 'ansible-galaxy collection install -r requirements.yml'
        sh 'ansible-playbook -i inventory/slave1.hosts --private-key=$ANSIBLE_PRIVATE_KEY playbooks/nginx.yml'
      }
    }
    stage('tomcat') {
      steps {
        sh 'ansible-galaxy collection install -r requirements.yml'
        sh 'ansible-playbook -i inventory/slave1.hosts --private-key=$ANSIBLE_PRIVATE_KEY playbooks/tomcat.yml'
      }
    }
  }
}
